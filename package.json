{
  "name": "cryptopay-monorepo",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.15.5",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "lint": "pnpm -r --if-present lint",
    "typecheck": "pnpm -r --if-present typecheck",
    "test": "pnpm -r --workspace-concurrency=1 --if-present test",
    "test:unit": "bash ./scripts/ci/test-matrix.sh unit",
    "test:integration": "bash ./scripts/ci/test-matrix.sh integration",
    "test:e2e": "bash ./scripts/ci/test-matrix.sh e2e",
    "dev:web": "pnpm --filter @cryptopay/web dev",
    "typecheck:web": "pnpm --filter @cryptopay/web typecheck",
    "test:web:e2e": "pnpm --filter @cryptopay/web test:e2e",
    "dev:core-api": "pnpm --filter @cryptopay/core-api dev",
    "dev:customer-auth": "pnpm --filter @cryptopay/customer-auth dev",
    "dev:offshore-collector": "pnpm --filter @cryptopay/offshore-collector dev",
    "dev:payout-orchestrator": "pnpm --filter @cryptopay/payout-orchestrator dev",
    "dev:reconciliation-worker": "pnpm --filter @cryptopay/reconciliation-worker dev",
    "check:ethiopia-boundary": "node scripts/check-ethiopia-boundary.mjs",
    "go:test": "mkdir -p .cache/go-build-base .cache/go-build-solana && GOCACHE=$(pwd)/.cache/go-build-base go -C workers/base-watcher test ./... && GOCACHE=$(pwd)/.cache/go-build-solana go -C workers/solana-watcher test ./..."
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "esbuild": "^0.25.12",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  }
}
