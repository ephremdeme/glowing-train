{
  "name": "@cryptopay/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "build": "node ../../scripts/build/build-runtime.mjs --entry src/index.ts --out dist/index.cjs && node ../../scripts/build/build-runtime.mjs --entry src/migrate.ts --out dist/migrate.cjs",
    "lint": "tsc -p tsconfig.json --noEmit",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "migrate": "tsx src/migrate.ts"
  },
  "dependencies": {
    "@cryptopay/config": "workspace:*",
    "pg": "^8.13.1"
  },
  "devDependencies": {
    "@types/pg": "^8.15.5"
  }
}
